{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es2018",
      "dom"
    ],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "src",
    "paths": {
      "actions/*": [ "actions/*" ]
    }
  },
  "include": ["./src/declaration.d.ts"],
  "exclude": [
    "node_modules"
  ]
}
